@inherits UmbracoViewPage
<!-- Highlights Sections -->
<section class="wrapper">
    <div class="inner">
        <header class="special">
            <h2>@Umbraco.AssignedContentItem.Value("highlightsHeader")</h2>
            @Umbraco.AssignedContentItem.Value("highlightsSubText")
        </header>
        <div class="highlights">
            <section>
                <div class="content">
                    <header>
                        <i class="icon @Umbraco.AssignedContentItem.Value("highlightsOneIcon",defaultValue:"No Content Found") hvr-bob"></i>
                        <h3>@Umbraco.AssignedContentItem.Value("highlightsOneHeader")</h3>
                    </header>
                    @Umbraco.AssignedContentItem.Value("highlightsOneText")
                </div>
            </section>
            <section>
                <div class="content">
                    <header>
                        <i class="icon @Umbraco.AssignedContentItem.Value("highlightsTwoIcon",defaultValue:"No Content Found") hvr-bob"></i>
                        <h3>@Umbraco.AssignedContentItem.Value("highlightsTwoHeader")</h3>
                    </header>
                    @Umbraco.AssignedContentItem.Value("highlightsTwoText")
                </div>
            </section>
            <section>
                <div class="content">
                    <header>
                        <i class="icon @Umbraco.AssignedContentItem.Value("highlightsThreeIcon",defaultValue:"No Content Found") hvr-bob"></i>
                        <h3>@Umbraco.AssignedContentItem.Value("highlightsThreeHeader")</h3>
                    </header>
                    @Umbraco.AssignedContentItem.Value("highlightsThreeText")
                </div>
            </section>
        </div>
    </div>
</section>